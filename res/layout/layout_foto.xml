<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo_dialogo_foto"
    >

    <Button
        android:id="@+id/buttonFotoDialogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margen_radio"
        android:background="@drawable/boton_foto_dialogo_selector"
         />

    <Button
        android:id="@+id/buttonGaleriaDialogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
       android:layout_marginLeft="@dimen/margen_radio"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/buttonFotoDialogo"
        android:paddingRight="15dp"
        android:background="@drawable/boton_galeria_selector" />

</RelativeLayout>